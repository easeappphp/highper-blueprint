# Application Configuration
APP_NAME="Highper Blueprint Application"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_KEY=base64:randomKeyHere

# Server Configuration
APP_HOST=0.0.0.0
APP_PORT=8080
APP_MIN_WORKERS=2
APP_MAX_WORKERS=8

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=highper
DB_USERNAME=root
DB_PASSWORD=

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=60
DB_POOL_WAIT_TIMEOUT=5
DB_POOL_MAX_WAIT_QUEUE=100

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2

# Logging Configuration
LOG_CHANNEL=file
LOG_PATH=storage/logs/app.log
LOG_LEVEL=debug
LOG_FORMATTER=json
LOG_ASYNC=true
LOG_QUEUE_SIZE=1000

# Security Configuration
SECURITY_CSP_ENABLED=true
SECURITY_CSP_REPORT_ONLY=false
SECURITY_CSP_REPORT_URI=

SECURITY_HSTS_ENABLED=false
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_HSTS_SUBDOMAINS=true
SECURITY_HSTS_PRELOAD=false

SECURITY_CORS_ENABLED=true
SECURITY_CORS_ORIGINS=*
SECURITY_CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
SECURITY_CORS_HEADERS=Content-Type,X-Requested-With,Authorization
SECURITY_CORS_EXPOSE=Content-Disposition
SECURITY_CORS_CREDENTIALS=false
SECURITY_CORS_MAX_AGE=86400

SECURITY_RATE_LIMIT_ENABLED=true
SECURITY_RATE_LIMIT_IDENTIFIER=ip
SECURITY_RATE_LIMIT_LIMIT=60
SECURITY_RATE_LIMIT_DURATION=60
SECURITY_RATE_LIMIT_STATUS=429
SECURITY_RATE_LIMIT_RETRY=60

SECURITY_CSRF_ENABLED=true
SECURITY_CSRF_TOKEN_NAME=_csrf_token
SECURITY_CSRF_HEADER=X-CSRF-TOKEN
SECURITY_CSRF_EXPIRATION=7200
SECURITY_CSRF_EXCLUDE=/api/*

SECURITY_FEATURE_POLICY_ENABLED=true
SECURITY_PERMISSIONS_POLICY_ENABLED=true

SECURITY_TRUSTED_PROXIES=127.0.0.1
SECURITY_PROXY_FORWARDED=true
SECURITY_PROXY_X_FORWARDED_FOR=true
SECURITY_PROXY_X_FORWARDED_HOST=true
SECURITY_PROXY_X_FORWARDED_PORT=true
SECURITY_PROXY_X_FORWARDED_PROTO=true

# Tracing Configuration
TRACING_ENABLED=true
TRACING_ENDPOINT=http://localhost:4318/v1/traces
TRACING_BATCH_SIZE=512
TRACING_EXPORT_TIMEOUT=30000

# Cache Configuration
CACHE_DRIVER=memory
CACHE_PREFIX=highper_
CACHE_TTL=3600

# Queue Configuration
QUEUE_CONNECTION=sync
QUEUE_MAX_JOBS=1000
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_AFTER=60
QUEUE_TIMEOUT=60

# WebSocket Configuration
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8088
WEBSOCKET_MAX_CONNECTIONS=10000
